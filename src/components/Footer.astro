---
import Icon from "./Icon.astro";
import nav from "../data/navigation.json";
---

<footer class="bg-theme-primary-darker text-white py-8">
  <div
    class="container content flex flex-col lg:flex-row justify-between items-start lg:items-center gap-8"
  >
    <!-- First Column - Logo and Navigation -->
    <div class="flex flex-col items-center lg:items-start w-full lg:w-1/4">
      <div class="text-2xl lg:text-3xl font-bold text-white mb-4">
        {nav.brand.name}
      </div>
      <nav
        class="flex flex-wrap justify-center lg:justify-start gap-x-4 gap-y-2"
      >
        {
          nav.links.map((link) => (
            <a href={link.href} class="text-sm text-white hover:text-gray-300">
              {link.label}
            </a>
          ))
        }
        <a href={nav.cta.href} class="text-sm text-white hover:text-gray-300"
          >{nav.cta.label}</a
        >
      </nav>
    </div>

    <!-- Middle Column - Contact Info -->
    <div class="flex flex-col items-center lg:items-start w-full lg:w-1/3">
      <div class="flex items-start w-full my-3">
        <div class="w-8 text-center mt-1">
          <Icon name="phone" size="sm" class="text-gray-400 mx-auto" />
        </div>
        <p class="ml-3 text-sm">
          123 Healthcare Drive, Suite 200<br />Springfield, IL 62701
        </p>
      </div>
      <div class="flex items-start w-full my-3">
        <div class="w-8 text-center mt-1">
          <svg
            class="w-4 h-4 text-gray-400 mx-auto"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
            ></path>
          </svg>
        </div>
        <p class="ml-3 text-sm">+1 (555) 123-4567</p>
      </div>
      <div class="flex items-start w-full my-3">
        <div class="w-8 text-center mt-1">
          <svg
            class="w-4 h-4 text-gray-400 mx-auto"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
            ></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
            ></path>
          </svg>
        </div>
        <p class="ml-3 text-sm">info@medcaresolutions.com</p>
      </div>
    </div>

    <!-- Third Column - Description and Social -->
    <div class="flex flex-col items-center lg:items-start w-full lg:w-2/5">
      <h3 class="text-lg font-semibold mb-3 text-center lg:text-left">
        {nav.brand.name}
      </h3>
      <p
        class="text-sm text-center lg:text-left leading-relaxed max-w-md lg:max-w-none"
      >
        Professional Healthcare Services serving communities across the region
        with compassionate, expert care delivered directly to your home.
      </p>
      <div class="flex justify-center lg:justify-start mt-6 space-x-4">
        <a
          href="#"
          class="text-gray-400 hover:text-white transition-colors"
          aria-label="Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="text-gray-400 hover:text-white transition-colors"
          aria-label="Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="text-gray-400 hover:text-white transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
