---
import infusionImage from "../assets/professional-staff.jpg";
import patientCareImage from "../assets/about-main.jpg";
import staffImage from "../assets/team-professionals.jpg";
import Card from "./Card.astro";

const services = [
  {
    title: "In-Home Healthcare",
    summary: "Medical treatments and infusions delivered in your home.",
    image: infusionImage,
    link: "/services#professional-healthcare-services",
  },
  {
    title: "Care Coordination",
    summary: "Complete care management from intake to ongoing treatment.",
    image: patientCareImage,
    link: "/services#our-patient-care",
  },
  {
    title: "Licensed Professionals",
    summary: "Multi-state licensed nurses delivering quality care.",
    image: staffImage,
    link: "/services#our-staff",
  },
];
---

<div class="container">
  <div class="text-center mb-12">
    <p class="text-sm font-medium tracking-widest uppercase text-theme-primary mb-4">
      What We Do
    </p>
    <h2>Our Services</h2>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
    {
      services.map((service) => (
        <Card
          title={service.title}
          summary={service.summary}
          image={service.image}
          link={service.link}
        />
      ))
    }
  </div>
</div>
