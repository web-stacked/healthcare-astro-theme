---
import Layout from "../layouts/Layout.astro";
import teamProfessionalsImage from "../assets/team-professionals.jpg";
import PageHero from "../components/PageHero.astro";
import CallToActionSection from "../components/CallToActionSection.astro";
import Icon from "../components/Icon.astro";
import CheckListItem from "../components/CheckListItem.astro";

import { Image } from "astro:assets";
---

<Layout
  title="Career Opportunities - Join Our Team | MedCare Solutions"
  description="Join MedCare Solutions healthcare team. We offer rewarding careers for qualified healthcare professionals with competitive salary, flexible schedules, and professional development."
>
  <PageHero
    title="CAREER OPPORTUNITIES"
    description="MedCare Solutions is a dynamic and rapidly growing healthcare services agency looking to grow our family of qualified healthcare professionals across multiple regions. We offer rewarding career opportunities for dedicated individuals who are passionate about providing exceptional patient care."
    image={teamProfessionalsImage}
  />

  <section
    class="section bg-gradient-to-b from-theme-surface-muted to-theme-surface"
  >
    <div class="container">
      <!-- Education & Experience Section -->
      <div class="flex flex-wrap items-center gap-12 lg:gap-16 justify-center">
        <!-- Text Content -->
        <div class="w-full lg:w-5/12 mx-auto">
          <!-- Section Heading -->
          <div class="flex items-center mb-6">
            <div
              class="p-4 text-center inline-flex items-center justify-center w-14 h-14 bg-theme-primary-lighter/20 rounded-xl mr-4"
            >
              <Icon name="users" size="lg" class="text-theme-primary w-7 h-7" />
            </div>
            <h2
              class="text-2xl lg:text-3xl font-bold text-theme-text-primary leading-tight"
            >
              Education & Experience
            </h2>
          </div>
          <!-- Section Description -->
          <p
            class="text-base lg:text-lg font-light leading-relaxed mb-6 text-theme-text-secondary"
          >
            All potential candidates for hire as healthcare professionals must
            meet standards established by the specific state licensing
            requirements and Department of Health (DOH) minimum requirements to
            service any patient within the domain of MedCare Solutions
            healthcare services licensure.
          </p>
          <p
            class="text-base lg:text-lg font-light leading-relaxed text-theme-text-secondary"
          >
            This agency strictly adheres to the state codes, rules, and
            regulations governing the healthcare model requirements and
            experience essential for healthcare services. A complete job
            description is located in the agency Manual on Policy and
            Procedures. A description may be obtained from the agency Human
            Resources (HR) department.
          </p>
        </div>

        <!-- Image Block -->
        <div class="w-full lg:w-5/12 mx-auto">
          <div
            class="relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300"
          >
            <img
              alt="Healthcare team collaboration"
              src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1051&q=80"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="section-sm bg-gradient-to-b from-theme-primary-lighter/10 via-theme-primary-lighter/5 to-theme-surface"
  >
    <div class="container">
      <!-- Position Requirements & Why Work With Us Section -->
      <div class="flex flex-wrap items-start gap-12 lg:gap-16">
        <!-- Position Requirements -->
        <div class="w-full lg:w-5/12 mx-auto">
          <div class="flex items-center mb-8">
            <div class="p-4 bg-theme-primary-lighter/20 rounded-xl mr-4">
              <Icon
                name="clipboard"
                size="lg"
                class="text-theme-primary w-7 h-7"
              />
            </div>
            <h2
              class="text-2xl lg:text-3xl font-bold text-theme-text-primary leading-tight"
            >
              Position Requirements
            </h2>
          </div>
          <!-- Requirements List -->
          <ul class="space-y-4">
            <CheckListItem
              >Professional license for at least 1-2 years, with current
              registration</CheckListItem
            >
            <CheckListItem
              >Knowledge of healthcare therapies and patient care procedures</CheckListItem
            >
            <CheckListItem>Proficient clinical skills</CheckListItem>
            <CheckListItem>Good physical assessment skills</CheckListItem>
            <CheckListItem>Excellent communication skills</CheckListItem>
            <CheckListItem>Reliability, with a flexible schedule</CheckListItem>
            <CheckListItem
              >Valid driver's license if not using public transportation</CheckListItem
            >
            <CheckListItem
              >Graduate of an Accredited Healthcare Program, College or
              University</CheckListItem
            >
            <CheckListItem
              >Minimum 1-2 years healthcare experience</CheckListItem
            >
            <CheckListItem>Current CPR/BLS certification</CheckListItem>
            <CheckListItem
              >Current professional liability insurance required</CheckListItem
            >
            <CheckListItem
              >Knowledge of the Microsoft Outlook and MS Word</CheckListItem
            >
          </ul>
        </div>

        <!-- Why Work With Us & Application Process -->
        <div class="w-full lg:w-5/12 mx-auto">
          <!-- Why Work With Us -->
          <div
            class="relative bg-gradient-to-br from-theme-primary to-theme-primary-dark rounded-2xl p-8 lg:p-10 shadow-xl mb-8 overflow-hidden"
          >
            <!-- Decorative elements -->
            <div
              class="absolute top-0 right-0 w-40 h-40 bg-white/10 rounded-full -mr-20 -mt-20"
            >
            </div>
            <div
              class="absolute bottom-0 left-0 w-32 h-32 bg-white/10 rounded-full -ml-16 -mb-16"
            >
            </div>

            <div class="relative z-10">
              <div class="flex items-center mb-8">
                <div class="p-3 bg-white/20 rounded-xl mr-4">
                  <Icon name="star" size="lg" class="text-white w-8 h-8" />
                </div>
                <h3 class="text-2xl lg:text-3xl font-bold text-white">
                  Why Work With Us
                </h3>
              </div>
              <ul class="space-y-5">
                <li class="flex items-start group">
                  <div
                    class="flex-shrink-0 w-8 h-8 rounded-full bg-white/20 flex items-center justify-center mr-4 mt-0.5 group-hover:bg-white/30 transition-colors duration-300"
                  >
                    <Icon name="check" size="md" class="text-white" />
                  </div>
                  <span class="text-lg text-white font-medium"
                    >Equal Opportunity Employer</span
                  >
                </li>
                <li class="flex items-start group">
                  <div
                    class="flex-shrink-0 w-8 h-8 rounded-full bg-white/20 flex items-center justify-center mr-4 mt-0.5 group-hover:bg-white/30 transition-colors duration-300"
                  >
                    <Icon name="check" size="md" class="text-white" />
                  </div>
                  <span class="text-lg text-white font-medium"
                    >Competitive Salary</span
                  >
                </li>
                <li class="flex items-start group">
                  <div
                    class="flex-shrink-0 w-8 h-8 rounded-full bg-white/20 flex items-center justify-center mr-4 mt-0.5 group-hover:bg-white/30 transition-colors duration-300"
                  >
                    <Icon name="check" size="md" class="text-white" />
                  </div>
                  <span class="text-lg text-white font-medium"
                    >Full, Part-Time and Per Diem Positions Available</span
                  >
                </li>
              </ul>
            </div>
          </div>

          <!-- Application Process -->
          <div
            class="bg-theme-surface rounded-2xl p-6 lg:p-8 shadow-xl border border-theme-border hover:shadow-2xl transition-shadow duration-300"
          >
            <div class="flex items-center mb-4">
              <div class="p-2.5 bg-theme-primary-lighter/20 rounded-lg mr-3">
                <Icon name="document" size="lg" class="text-theme-primary" />
              </div>
              <h3 class="text-xl lg:text-2xl font-bold text-theme-text-primary">
                Application Process
              </h3>
            </div>
            <p
              class="mb-5 text-base font-light leading-relaxed text-theme-text-secondary"
            >
              MedCare Solutions requires all healthcare professional applicants
              to complete the Personal Experience Screening Questionnaires.
            </p>
            <!-- Application Links -->
            <div class="space-y-3">
              <a
                href="#pesq"
                class="flex items-center justify-between p-3 bg-theme-surface-hover hover:bg-theme-primary-lighter/10 rounded-lg text-theme-primary hover:text-theme-primary-dark font-semibold transition-all duration-300 group border border-theme-border hover:border-theme-primary-lighter"
              >
                <div class="flex items-center">
                  <Icon name="document" size="md" class="mr-3 flex-shrink-0" />
                  <span class="text-base lg:text-lg"
                    >Personal Experience Screening Questionnaire</span
                  >
                </div>
                <Icon
                  name="chevron-right"
                  size="md"
                  class="group-hover:translate-x-1 transition-transform duration-300 flex-shrink-0"
                />
              </a>
              <a
                href="#employment-application"
                class="flex items-center justify-between p-3 bg-theme-surface-hover hover:bg-theme-primary-lighter/10 rounded-lg text-theme-primary hover:text-theme-primary-dark font-semibold transition-all duration-300 group border border-theme-border hover:border-theme-primary-lighter"
              >
                <div class="flex items-center">
                  <Icon name="document" size="md" class="mr-3 flex-shrink-0" />
                  <span class="text-base lg:text-lg"
                    >Employment Application</span
                  >
                </div>
                <Icon
                  name="chevron-right"
                  size="md"
                  class="group-hover:translate-x-1 transition-transform duration-300 flex-shrink-0"
                />
              </a>
              <a
                href="#reference-request"
                class="flex items-center justify-between p-3 bg-theme-surface-hover hover:bg-theme-primary-lighter/10 rounded-lg text-theme-primary hover:text-theme-primary-dark font-semibold transition-all duration-300 group border border-theme-border hover:border-theme-primary-lighter"
              >
                <div class="flex items-center">
                  <Icon name="document" size="md" class="mr-3 flex-shrink-0" />
                  <span class="text-base lg:text-lg">Reference Request</span>
                </div>
                <Icon
                  name="chevron-right"
                  size="md"
                  class="group-hover:translate-x-1 transition-transform duration-300 flex-shrink-0"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Training Section -->
  <section class="section-sm bg-theme-surface">
    <div class="container">
      <!-- Training Header -->
      <div class="mb-12">
        <div class="flex items-center mb-6">
          <div class="p-4 bg-theme-primary-lighter/20 rounded-xl mr-4">
            <Icon name="book" size="lg" class="text-theme-primary w-7 h-7" />
          </div>
          <h2
            class="text-2xl lg:text-3xl font-bold text-theme-text-primary leading-tight"
          >
            Training
          </h2>
        </div>

        <p
          class="text-base font-light leading-relaxed text-theme-text-secondary mb-4"
        >
          Once a candidate has met the pre-hiring requirements, the agency
          schedules the healthcare professional for essential training prior to
          servicing any patient.
        </p>
        <p
          class="text-base font-light leading-relaxed text-theme-text-secondary"
        >
          The agency training program incorporates both a clinical and didactic
          component.
        </p>
      </div>

      <!-- Training Cards -->
      <div class="flex flex-wrap items-stretch gap-8 lg:gap-12">
        <!-- Training Resources Card -->
        <div class="w-full lg:w-[48%]">
          <div
            class="bg-gradient-to-br from-theme-surface-muted to-theme-surface-hover rounded-2xl p-8 border border-theme-border h-full"
          >
            <h3 class="text-xl font-bold text-theme-text-primary mb-4">
              Training Resources
            </h3>
            <p
              class="text-base font-light leading-relaxed text-theme-text-secondary mb-6"
            >
              Specific equipment operation training and procedures may be viewed
              through our comprehensive training resources.
              <a
                href="#"
                class="text-theme-primary hover:text-theme-primary-dark font-semibold transition-colors"
                >Training Portal</a
              >
              Click on equipment training for detailed video resources.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <Icon
                  name="video"
                  size="md"
                  class="text-theme-primary mr-3 mt-1 flex-shrink-0"
                />
                <span class="text-base text-theme-text-secondary"
                  >Infusion pump training</span
                >
              </li>
              <li class="flex items-start">
                <Icon
                  name="video"
                  size="md"
                  class="text-theme-primary mr-3 mt-1 flex-shrink-0"
                />
                <span class="text-base text-theme-text-secondary"
                  >Ambulatory infusion system training</span
                >
              </li>
              <li class="flex items-start">
                <Icon
                  name="video"
                  size="md"
                  class="text-theme-primary mr-3 mt-1 flex-shrink-0"
                />
                <span class="text-base text-theme-text-secondary"
                  >Medical device training</span
                >
              </li>
              <li class="flex items-start">
                <Icon
                  name="video"
                  size="md"
                  class="text-theme-primary mr-3 mt-1 flex-shrink-0"
                />
                <span class="text-base text-theme-text-secondary"
                  >Infusion therapy training</span
                >
              </li>
              <li class="flex items-start">
                <Icon
                  name="document"
                  size="md"
                  class="text-theme-primary mr-3 mt-1 flex-shrink-0"
                />
                <span class="text-base text-theme-text-secondary"
                  >Patient care protocols</span
                >
              </li>
              <li class="flex items-start">
                <Icon
                  name="document"
                  size="md"
                  class="text-theme-primary mr-3 mt-1 flex-shrink-0"
                />
                <span class="text-base text-theme-text-secondary"
                  >Clinical guidelines</span
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- Sexual Harassment Training Card -->
        <div class="w-full lg:w-[48%]">
          <div
            class="bg-gradient-to-br from-theme-accent-sky/10 to-theme-accent-sky/5 rounded-2xl p-8 border border-theme-accent-sky/20 h-full"
          >
            <h3 class="text-xl font-bold text-theme-text-primary mb-4">
              Sexual Harassment Prevention Training
            </h3>
            <p
              class="text-base font-light leading-relaxed text-theme-text-secondary mb-6"
            >
              The Sexual Harassment Training video was prepared by the Secretary
              of Labor for the State. Both the Governing Authority and all
              employees of MedCare Solutions are required to review the Sexual
              Harassment Prevention Policy and Training. A copy of the agency
              policy and procedure document is available at your request. An
              acknowledgement form must be signed and returned to the agency.
            </p>
            <div class="space-y-3 mb-6">
              <a
                href="#"
                class="flex items-center text-theme-primary hover:text-theme-primary-dark font-semibold text-base transition-colors group"
              >
                <Icon
                  name="video"
                  size="md"
                  class="mr-2 group-hover:translate-x-1 transition-transform duration-300 flex-shrink-0"
                />
                <span>Sexual Harassment Prevention Training Part 1</span>
              </a>
              <a
                href="#"
                class="flex items-center text-theme-primary hover:text-theme-primary-dark font-semibold text-base transition-colors group"
              >
                <Icon
                  name="video"
                  size="md"
                  class="mr-2 group-hover:translate-x-1 transition-transform duration-300 flex-shrink-0"
                />
                <span
                  >Sexual Harassment Prevention Training Part 2: Case Studies</span
                >
              </a>
            </div>
            <div class="bg-white rounded-xl p-6 border border-blue-200">
              <p class="text-gray-700 mb-2 text-sm">
                <strong class="text-gray-900">Submit forms to:</strong>
                <a
                  href="mailto:hr@medcaresolutions.com"
                  class="text-theme-primary hover:text-theme-primary-dark font-semibold transition-colors ml-2"
                  >hr@medcaresolutions.com</a
                >
              </p>
              <p class="text-gray-700 text-sm">
                <strong class="text-gray-900">Questions?</strong>
                <span class="ml-2"
                  >Contact the administrator at <a
                    href="tel:555-123-4567"
                    class="text-theme-primary hover:text-theme-primary-dark font-semibold transition-colors"
                    >555-123-4567</a
                  ></span
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CallToActionSection
    heading="Begin Your Rewarding Healthcare Career"
    subheading="Join a team of dedicated professionals making a real difference in patients' lives. We offer competitive benefits, ongoing training, and the opportunity to grow with a regional leader in healthcare services."
    primaryButtonText="Apply Today"
    primaryButtonLink="/contact"
    secondaryButtonText="Have Questions?"
    secondaryButtonLink="/contact"
  />
</Layout>
