---
import { Image } from "astro:assets";
import Heading from "./Heading.astro";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  /** Set to true for above-the-fold hero images to optimize LCP */
  priority?: boolean;
}

const { title, description, image, priority = true } = Astro.props;
---

<section class="w-full bg-theme-surface-muted section">
  <div class="container">
    <div class="flex flex-col md:flex-row items-center gap-12 lg:gap-16">
      <!-- Text container -->
      <div class="w-full md:w-1/2 flex flex-col justify-center">
        <Heading level="h1" size="page" class="mb-8">
          {title}
        </Heading>
        <p
          class="text-base lg:text-lg leading-relaxed text-theme-text-secondary"
          set:html={description}
        />
      </div>
      <!-- Image container -->
      <div class="w-full md:w-1/2 flex items-center justify-center">
        <div class="relative w-full">
          <Image
            src={image}
            alt={title}
            class="w-full h-[350px] lg:h-[450px] object-cover rounded-2xl"
            loading={priority ? "eager" : "lazy"}
            fetchpriority={priority ? "high" : "auto"}
          />
        </div>
      </div>
    </div>
  </div>
</section>
