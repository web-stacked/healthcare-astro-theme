---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  title: string;
  summary: string;
  link: string;
}

const { image, title, summary, link } = Astro.props;
---

<a href={link} class="group block card overflow-hidden">
  <div class="aspect-[4/3] overflow-hidden">
    <Image
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  <div class="p-6">
    <h3 class="text-2xl mb-3 group-hover:text-theme-primary transition-colors">
      {title}
    </h3>
    <p class="text-theme-text-secondary text-base leading-relaxed">
      {summary}
    </p>
    <span class="inline-flex items-center mt-4 text-base font-medium text-theme-primary group-hover:gap-2 transition-all">
      Learn more
      <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </span>
  </div>
</a>
