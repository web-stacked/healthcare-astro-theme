---
import Icon from "./Icon.astro";

interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<li class={`flex items-start ${className}`.trim()}>
  <Icon
    name="check"
    size="md"
    class="text-theme-primary mr-3 mt-1 flex-shrink-0"
  />
  <span class="text-theme-text-secondary text-base lg:text-lg">
    <slot />
  </span>
</li>
