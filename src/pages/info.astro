---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import CallToActionSection from "../components/CallToActionSection.astro";
import faqHeroImage from "../assets/service-detail.jpg";
import Heading from "../components/Heading.astro";
import FaqAccordion from "../components/FaqAccordion.astro";
import faqs from "../data/faqs.json";

const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer.replace(/<[^>]*>/g, ""),
    },
  })),
};
---

<Layout
  title="FAQ - Frequently Asked Questions | MedCare Solutions"
  description="Find clear answers about our services, eligibility, appointments, and what to expect from professional care at home."
>
  <PageHero
    title="FREQUENTLY ASKED QUESTIONS"
    description="Clear answers about our services, coverage, and careâ€”so you can make confident decisions for yourself or a loved one."
    image={faqHeroImage}
  />

  <section class="section bg-gradient-to-b from-theme-surface-muted to-theme-surface">
    <div class="container">
      <div class="narrow mx-auto text-center mb-8">
        <Heading level="h2" align="center"> Frequently Asked Questions </Heading>
      </div>
      <div class="max-w-5xl mx-auto">
        <FaqAccordion items={faqs} />
      </div>
    </div>
  </section>

  <script type="application/ld+json">{JSON.stringify(faqLd)}</script>

  <CallToActionSection
    heading="Still Have Questions?"
    subheading="Our healthcare team is here to help answer any additional questions you may have about our services. Contact us today to learn more about how we can support your healthcare needs."
    primaryButtonText="Contact Us"
    primaryButtonLink="/contact"
  />
</Layout>
