---
import Icon from './Icon.astro';
import type { IconName } from '../types/icons';

interface Props {
  href: string;
  variant?: 'primary' | 'inline';
  showIcon?: boolean;
  iconName?: IconName;
  class?: string;
  ariaLabel?: string;
}

const {
  href,
  variant = 'primary',
  showIcon = true,
  iconName = 'chevron-right',
  class: className = '',
  ariaLabel,
} = Astro.props;

const variantClasses = {
  primary: 'link-primary text-lg group transition-colors',
  inline: 'link-primary',
};

const linkClasses = `inline-flex items-center ${variantClasses[variant]} ${className}`.trim();
---

<a href={href} class={linkClasses} aria-label={ariaLabel}>
  <slot />
  {showIcon && (
    <Icon
      name={iconName}
      size="md"
      class="ml-2 group-hover:translate-x-1 transition-transform duration-300"
    />
  )}
</a>
