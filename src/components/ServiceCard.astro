---
import Icon from './Icon.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="bg-theme-surface p-5 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 border border-theme-border group">
  <div class="flex items-center gap-3">
    <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-theme-primary/10 flex items-center justify-center group-hover:bg-theme-primary transition-colors duration-300">
      <Icon
        name="check"
        size="md"
        class="text-theme-primary group-hover:text-theme-text-on-primary transition-colors duration-300"
      />
    </div>
    <span class="text-theme-text-primary font-medium">{title}</span>
  </div>
</div>
