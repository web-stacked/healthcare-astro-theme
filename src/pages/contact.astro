  <section
    class="section bg-gradient-to-b from-theme-surface-muted to-theme-surface"
    id="contact"
  >
    <div class="container">
      <div class="flex items-stretch justify-center">
        <div class="grid md:grid-cols-2">
          <div class="h-full mt-3 mb-12 pr-6">
            <p class="mt-3 mb-12 text-lg text-theme-text-primary">
              <!-- Changed text color to black -->
              We're committed to providing exceptional healthcare services and support.
              Our team is here to help you navigate your healthcare needs with compassion
              and professionalism. Contact us today to learn more about our services.
            </p>
            <ul class="mb-6 md:mb-0">
              <li class="flex">
                <div class="flex h-10 w-10 items-center justify-center">
                  <svg
                    class="w-6 h-6 text-theme-primary"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-4 mb-4">
                  <h3
                    class="mb-2 text-lg font-medium leading-6 text-theme-text-primary"
                  >
                    Our Address
                  </h3>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    123 Healthcare Drive, Suite 200
                  </p>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    Springfield, IL 62701
                  </p>
                </div>
              </li>
              <li class="flex">
                <div class="flex h-10 w-10 items-center justify-center">
                  <svg
                    class="w-6 h-6 text-theme-primary"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                    ></path>
                    <path
                      d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                    ></path>
                  </svg>
                </div>
                <div class="ml-4 mb-4">
                  <h3
                    class="mb-2 text-lg font-medium leading-6 text-theme-text-primary"
                  >
                    Contact
                  </h3>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    Phone: +1 (555) 123-4567
                  </p>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    Email: info@medcaresolutions.com
                  </p>
                </div>
              </li>
              <li class="flex">
                <div class="flex h-10 w-10 items-center justify-center">
                  <svg
                    class="w-6 h-6 text-theme-primary"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-4 mb-4">
                  <h3
                    class="mb-2 text-lg font-medium leading-6 text-theme-text-primary"
                  >
                    Working hours
                  </h3>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    Monday - Friday: 08:00 - 18:00
                  </p>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    Saturday: 09:00 - 15:00
                  </p>
                  <p class="text-theme-text-primary">
                    <!-- Changed text color to black -->
                    Sunday: Emergency services only
                  </p>
                </div>
              </li>
            </ul>
          </div>
          <div
            class="bg-white rounded-2xl shadow-xl p-8 md:p-10 h-full border border-gray-100 hover:shadow-2xl transition-shadow duration-300"
            id="form"
          >
            <h2 class="mb-6 text-2xl font-bold text-theme-text-primary">
              Ready to Get Started?
            </h2>
            <form id="contactForm">
              <div class="mb-6">
                <div class="mx-0 mb-1 sm:mb-4">
                  <div class="mx-0 mb-1 sm:mb-4">
                    <label
                      for="name"
                      class="pb-1 text-xs uppercase tracking-wider text-theme-text-primary"
                    ></label><input
                      type="text"
                      id="name"
                      autocomplete="given-name"
                      placeholder="Your name"
                      class="mb-2 w-full rounded-lg bg-white ring-1 ring-gray-300 focus:ring-2 focus:ring-theme-primary focus:outline-none py-3 pl-4 pr-4 text-theme-text-primary sm:mb-0 transition-all duration-200"
                      name="name"
                    />
                  </div>
                  <div class="mx-0 mb-1 sm:mb-4">
                    <label
                      for="email"
                      class="pb-1 text-xs uppercase tracking-wider text-theme-text-primary"
                    ></label><input
                      type="email"
                      id="email"
                      autocomplete="email"
                      placeholder="Your email address"
                      class="mb-2 w-full rounded-lg bg-white ring-1 ring-gray-300 focus:ring-2 focus:ring-theme-primary focus:outline-none py-3 pl-4 pr-4 text-theme-text-primary sm:mb-0 transition-all duration-200"
                      name="email"
                    />
                  </div>
                </div>
                <div class="mx-0 mb-1 sm:mb-4">
                  <label
                    for="textarea"
                    class="pb-1 text-xs uppercase tracking-wider text-theme-text-primary"
                  ></label><textarea
                    id="textarea"
                    name="textarea"
                    cols="30"
                    rows="5"
                    placeholder="Write your message..."
                    class="mb-2 w-full rounded-lg bg-white ring-1 ring-gray-300 focus:ring-2 focus:ring-theme-primary focus:outline-none py-3 pl-4 pr-4 text-theme-text-primary sm:mb-0 transition-all duration-200"
                  ></textarea>
                </div>
              </div>
              <div class="text-center">
                <button
                  type="submit"
                  class="w-full bg-theme-primary hover:bg-theme-primary-dark text-white px-6 py-3 text-lg font-semibold rounded-lg sm:mb-0 transition-all duration-300 hover:shadow-lg"
                  >Send Message</button
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <div class="block w-full shrink-0 grow-0 basis-auto lg:flex">
        <div class="h-[400px] w-full rounded-2xl overflow-hidden shadow-xl">
          <iframe
            src="https://maps.google.com/maps?q=springfield+illinois&t=&z=13&ie=UTF8&iwloc=&output=embed"
            class="left-0 top-0 h-full w-full"
            frameborder="0"
            allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>
